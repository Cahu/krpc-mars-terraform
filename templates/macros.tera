{% macro format_params(params) %}
{%- for param in params -%}
	, p_{{ param.name }}: {{ param.type }}
{%- endfor -%}
{% endmacro format_params %}

{% macro list_params(params) %}
{%- set_global __list_params__sep = "" -%}
{%- for param in params -%}
	{{ __list_params__sep }}p_{{ param.name }}
	{%- set_global __list_params__sep = ", " -%}
{%- endfor -%}
{% endmacro list_params %}
